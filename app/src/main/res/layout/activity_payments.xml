<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/img_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/paymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Payment Method"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Payment Options -->
        <RadioGroup
            android:id="@+id/paymentOptionsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/paymentCreditCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Card / Debit Card"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="10dp" />

            <RadioButton
                android:id="@+id/paymentNetBanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Banking"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="10dp" />

            <RadioButton
                android:id="@+id/paymentDigitalWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Digital Wallet"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="10dp" />

            <RadioButton
                android:id="@+id/paymentGooglePay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Pay"
                android:textSize="18sp"
                android:textColor="#000"
                android:padding="10dp" />
        </RadioGroup>

        <!-- Make Payment Button -->
        <Button
            android:id="@+id/makePaymentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Payment"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
