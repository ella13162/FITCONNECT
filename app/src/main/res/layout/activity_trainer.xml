<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/img_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trainerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Trainer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Trainer Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <!-- Example Trainer 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_input"
                android:padding="16dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/trainerName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Alex Johnson"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/trainerGender1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: Male"
                    android:textSize="16sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/trainerExperience1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience: 5 years"
                    android:textSize="16sp"
                    android:textColor="#666" />

                <Button
                    android:id="@+id/checkAvailabilityBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Availability"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFF" />
            </LinearLayout>

            <!-- Example Trainer 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_input"
                android:padding="16dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/trainerName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Maria Lopez"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/trainerGender2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: Female"
                    android:textSize="16sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/trainerExperience2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience: 7 years"
                    android:textSize="16sp"
                    android:textColor="#666" />

                <Button
                    android:id="@+id/checkAvailabilityBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Availability"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFF" />
            </LinearLayout>

            <!-- Add more trainers in a similar format -->

        </LinearLayout>
    </LinearLayout>
</ScrollView>
